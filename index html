<body>
    <div id="root"></div>

    <script type="text/babel">
        // Configuration Supabase avec vos informations
        const SUPABASE_URL = 'https://rzwksaruhkeorwlrjcbl.supabase.co';
        // Remplacez cette cl√© par votre cl√© anon publique de Supabase
        const SUPABASE_ANON_KEY = 'YOUR_ANON_KEY_HERE';
        
        console.log('Initialisation de Supabase...');
        let supabase;
        
        try {
            // Initialisation de Supabase avec la m√©thode correcte
            supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
            console.log('Supabase initialis√© avec succ√®s');
        } catch (error) {
            console.error('Erreur Supabase:', error);
            alert('Erreur de configuration Supabase. V√©rifiez la console (F12)');
        }

        // Composant principal
        function App() {
            const [user, setUser] = React.useState(null);
            const [posts, setPosts] = React.useState([]);
            const [content, setContent] = React.useState('');
            const [loading, setLoading] = React.useState(false);
            const [error, setError] = React.useState('');
            const [success, setSuccess] = React.useState('');

            // V√©rifier si l'utilisateur est connect√© au chargement
            React.useEffect(() => {
                console.log('Chargement du composant App');
                checkUser();
                fetchPosts();
                
                // √âcouter les changements d'authentification
                if (supabase) {
                    const { data: { subscription } } = supabase.auth.onAuthStateChange(
                        (event, session) => {
                            console.log('√âv√©nement auth:', event, session);
                            setUser(session?.user || null);
                            if (event === 'SIGNED_IN') {
                                fetchPosts();
                                setSuccess('Connexion r√©ussie!');
                            }
                            if (event === 'SIGNED_OUT') {
                                setPosts([]);
                            }
                        }
                    );
                    
                    return () => subscription.unsubscribe();
                }
            }, []);

            // V√©rifier l'utilisateur actuel
            async function checkUser() {
                try {
                    console.log('V√©rification de l\'utilisateur...');
                    if (!supabase) {
                        setError('Supabase non initialis√©');
                        return;
                    }
                    
                    const { data: { user }, error } = await supabase.auth.getUser();
                    if (error) throw error;
                    
                    setUser(user);
                    console.log('Utilisateur actuel:', user);
                    if (user) fetchPosts();
                } catch (error) {
                    console.error('Erreur checkUser:', error);
                    setError('Erreur de connexion: ' + error.message);
                }
            }

            // Inscription
            async function handleSignUp(event) {
                event.preventDefault();
                console.log('Tentative d\'inscription...');
                setLoading(true);
                setError('');
                setSuccess('');
                
                const email = event.target.email.value;
                const password = event.target.password.value;
                
                console.log('Email:', email, 'Password:', password);
                
                try {
                    if (!supabase) {
                        throw new Error('Supabase non initialis√©');
                    }
                    
                    const { data, error } = await supabase.auth.signUp({
                        email,
                        password,
                    });
                    
                    if (error) throw error;
                    setSuccess('Compte cr√©√©! V√©rifiez votre email pour confirmer.');
                    event.target.reset();
                    console.log('Inscription r√©ussie');
                } catch (error) {
                    console.error('Erreur inscription:', error);
                    setError('Erreur inscription: ' + error.message);
                }
                
                setLoading(false);
            }

            // Connexion
            async function handleSignIn(event) {
                event.preventDefault();
                console.log('Tentative de connexion...');
                setLoading(true);
                setError('');
                setSuccess('');
                
                const email = event.target.email.value;
                const password = event.target.password.value;
                
                console.log('Email:', email, 'Password:', password);
                
                try {
                    if (!supabase) {
                        throw new Error('Supabase non initialis√©');
                    }
                    
                    const { data, error } = await supabase.auth.signInWithPassword({
                        email,
                        password,
                    });
                    
                    if (error) throw error;
                    setSuccess('Connexion r√©ussie!');
                    event.target.reset();
                    console.log('Connexion r√©ussie');
                } catch (error) {
                    console.error('Erreur connexion:', error);
                    setError('Erreur connexion: ' + error.message);
                }
                
                setLoading(false);
            }

            // D√©connexion
            async function handleSignOut() {
                console.log('Tentative de d√©connexion...');
                try {
                    if (!supabase) {
                        throw new Error('Supabase non initialis√©');
                    }
                    
                    const { error } = await supabase.auth.signOut();
                    if (error) throw error;
                    setSuccess('D√©connexion r√©ussie');
                    console.log('D√©connexion r√©ussie');
                } catch (error) {
                    console.error('Erreur d√©connexion:', error);
                    setError('Erreur d√©connexion: ' + error.message);
                }
            }

            // R√©cup√©rer les posts
            async function fetchPosts() {
                console.log('Chargement des posts...');
                try {
                    if (!supabase) {
                        throw new Error('Supabase non initialis√©');
                    }
                    
                    const { data, error } = await supabase
                        .from('posts')
                        .select('*, user:user_id(email)')
                        .order('created_at', { ascending: false });
                    
                    if (error) throw error;
                    setPosts(data || []);
                    console.log('Posts charg√©s:', data?.length || 0);
                } catch (error) {
                    console.error('Erreur chargement posts:', error);
                    setError('Erreur chargement posts: ' + error.message);
                }
            }

            // Cr√©er un post
            async function handleCreatePost(event) {
                event.preventDefault();
                console.log('Tentative de cr√©ation de post...');
                setLoading(true);
                setError('');
                setSuccess('');
                
                if (!content.trim()) {
                    setError('Le contenu ne peut pas √™tre vide');
                    setLoading(false);
                    return;
                }
                
                try {
                    if (!supabase) {
                        throw new Error('Supabase non initialis√©');
                    }
                    
                    const { data, error } = await supabase
                        .from('posts')
                        .insert([{ 
                            content: content.trim(), 
                            user_id: user.id 
                        }]);
                    
                    if (error) throw error;
                    setContent('');
                    setSuccess('Post cr√©√© avec succ√®s!');
                    fetchPosts();
                    console.log('Post cr√©√© avec succ√®s');
                } catch (error) {
                    console.error('Erreur cr√©ation post:', error);
                    setError('Erreur cr√©ation post: ' + error.message);
                }
                
                setLoading(false);
            }

            return (
                <div className="container">
                    <div className="header">
                        <h1>üî¨ Science Social</h1>
                        <p>Le r√©seau social d√©di√© aux passionn√©s de science</p>
                    </div>
                    
                    {error && <div className="error">‚ö†Ô∏è {error}</div>}
                    {success && <div className="success">‚úÖ {success}</div>}
                    
                    {!user ? (
                        <div className="auth-section">
                            <h2>Connexion / Inscription</h2>
                            <form className="auth-form" onSubmit={handleSignIn}>
                                <div className="form-group">
                                    <label>Email:</label>
                                    <input type="email" name="email" required />
                                </div>
                                <div className="form-group">
                                    <label>Mot de passe:</label>
                                    <input type="password" name="password" required minLength="6" />
                                </div>
                                <button type="submit" disabled={loading}>
                                    {loading ? 'Chargement...' : 'Se connecter'}
                                </button>
                            </form>
                            
                            <p style={{ marginTop: '15px', textAlign: 'center' }}>
                                Pas de compte? Inscrivez-vous:
                            </p>
                            
                            <form className="auth-form" onSubmit={handleSignUp}>
                                <div className="form-group">
                                    <label>Email:</label>
                                    <input type="email" name="email" required />
                                </div>
                                <div className="form-group">
                                    <label>Mot de passe (min. 6 caract√®res):</label>
                                    <input type="password" name="password" required minLength="6" />
                                </div>
                                <button type="submit" disabled={loading}>
                                    {loading ? 'Chargement...' : 'Cr√©er un compte'}
                                </button>
                            </form>
                        </div>
                    ) : (
                        <>
                            <div className="user-info">
                                <span>Connect√© en tant que: <span className="user-email">{user.email}</span></span>
                                <button onClick={handleSignOut} disabled={loading}>
                                    D√©connexion
                                </button>
                            </div>
                            
                            <div className="posts-section">
                                <h2>Partagez une d√©couverte scientifique</h2>
                                <form className="post-form" onSubmit={handleCreatePost}>
                                    <textarea
                                        value={content}
                                        onChange={(e) => setContent(e.target.value)}
                                        placeholder="Qu'avez-vous d√©couvert aujourd'hui? Partagez une observation, une question ou une d√©couverte scientifique..."
                                        required
                                        rows="4"
                                    />
                                    <button type="submit" disabled={loading || !content.trim()}>
                                        {loading ? 'Publication...' : 'Publier'}
                                    </button>
                                </form>
                                
                                <h3>Derni√®res publications</h3>
                                {posts.length === 0 ? (
                                    <p>Aucune publication pour le moment. Soyez le premier √† partager!</p>
                                ) : (
                                    posts.map((post) => (
                                        <div key={post.id} className="post">
                                            <div className="post-content">{post.content}</div>
                                            <div className="post-meta">
                                                <span>Par: {post.user?.email || 'Utilisateur inconnu'}</span>
                                                <span>Le: {new Date(post.created_at).toLocaleString('fr-FR')}</span>
                                            </div>
                                        </div>
                                    ))
                                )}
                            </div>
                        </>
                    )}
                    
                    <div className="debug-info">
                        <h3>Informations de d√©bogage</h3>
                        <p>URL Supabase: {SUPABASE_URL}</p>
                        <p>Utilisateur: {user ? user.email : 'Non connect√©'}</p>
                        <p>Nombre de posts: {posts.length}</p>
                        <p>Statut: {loading ? 'Chargement...' : 'Pr√™t'}</p>
                    </div>
                </div>
            );
        }

        // Rendu de l'application
        console.log('Rendu de l\'application React...');
        ReactDOM.render(<App />, document.getElementById('root'));
    </script>
</body>
</html>
